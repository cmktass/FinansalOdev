<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ProfilDetayActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bar"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:windowBackground">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/geriDon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_kapat"
                    android:layout_centerVertical="true"
                    />


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ProfiliDüzenle"
    android:layout_centerVertical="true"
    android:layout_marginStart="29dp"
    android:textColor="@color/colorSiyah"
    android:textStyle="bold"
    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/kaydetText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kaydet"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="15dp"
                    android:layout_marginRight="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorSiyah"
                    />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?android:windowBackground"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profil_resmi"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:onClick="resimSec"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/fotofrafDegistirTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Fotoğraf Yükle Degistir"
            android:onClick="resimSec"
            android:textColor="@color/colorSiyah"
            android:textSize="17dp"
            android:textStyle="italic" />

    </LinearLayout>


</LinearLayout>